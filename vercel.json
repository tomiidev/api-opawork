{
    "version": 2,
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "dist/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "api/index.js",
            "methods": [
                "POST",
                "GET",
                "DELETE",
                "PUT",
                "OPTIONS"
            ],
            "headers": {
                "Access-Control-Allow-Origin": "https://opawork.app",
                "Access-Control-Allow-Credentials": "true"
            }
        }
    ]
}